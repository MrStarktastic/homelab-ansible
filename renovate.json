{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "ansible": {
    "managerFilePatterns": ["/(^|/)tasks/[^/]+\\.ya?ml$/"]
  },
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["(^|/)tasks/[^/]+\\.ya?ml$", "\\.ya?ml$"],
      "matchStrings": [
        "#\\s*renovate:\\s*datasource=(?<datasource>.*?)\\s+depName=(?<depName>.*?)(?:\\s+registryUrl=(?<registryUrl>.*?))?\\s+.*?chart_version:\\s*\"?(?<currentValue>.*?)\"?\\s"
      ]
    }
  ]
}
